{
    "name": "dmjohnson/contemplate",
    "description": "Plates, the native PHP template system that's fast, easy to use and easy to extend.",
    "keywords": [
        "league",
        "package",
        "templating",
        "templates",
        "views"
    ],
    "homepage": "https://github.com/dmjohnsson23/contemplate",
    "license": "MIT",
    "authors" : [
        {
            "name": "Dominick Johnson",
            "role": "Developer"
        },
        {
            "name": "Jonathan Reinink",
            "email": "jonathan@reinink.ca",
            "role": "Developer"
        },
        {
            "name": "RJ Garcia",
            "email": "ragboyjr@icloud.com",
            "role": "Developer"
        }
    ],
    "require" : {
        "php": "^8.0"
    },
    "suggest": {
        "twig/twig": "For the ContemplateTwig bridge extension"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "DMJohnson\\Contemplate\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DMJohnson\\Contemplate\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "docs": "hugo -s doc server"
    }
}
